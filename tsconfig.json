{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"]
    },
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
